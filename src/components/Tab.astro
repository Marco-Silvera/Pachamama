---
import Descripcion from "./Descripcion.astro";
import Itinerario from "./Itinerario.astro";
import Precio from "./Precio.astro";

const { circuito } = Astro.props;
---

<div class="flex h-full items-center justify-center my-20">
  <div x-data="{ openTab: 1 }" class="p-8">
    <div class="w-[1000px]">
      <div class="mb-4 flex space-x-4 p-2 bg-white rounded-lg shadow-md">
        <button
          x-on:click="openTab = 1"
          :class="{ 'bg-[#226428] text-white': openTab === 1 }"
          class="flex-1 py-2 px-4 rounded-md focus:outline-none focus:shadow-outline-blue transition-all duration-300"
          >Descripci√≥n</button
        >
        <button
          x-on:click="openTab = 2"
          :class="{ 'bg-[#226428] text-white': openTab === 2 }"
          class="flex-1 py-2 px-4 rounded-md focus:outline-none focus:shadow-outline-blue transition-all duration-300"
          >Itinerario</button
        >
        <button
          x-on:click="openTab = 3"
          :class="{ 'bg-[#226428] text-white': openTab === 3 }"
          class="flex-1 py-2 px-4 rounded-md focus:outline-none focus:shadow-outline-blue transition-all duration-300"
          >Precios</button
        >
      </div>

      <div
        x-show="openTab === 1"
        class="transition-all duration-300 bg-white p-4 rounded-lg shadow-md relative"
      >
        <Descripcion
          titulo={circuito["descripcion-principal"]["titulo-descripcion"]}
          descripcion={circuito["descripcion-principal"]["parrafo-descripcion"]}
        />
        <div
          class="bg-[#226428] h-24 w-full flex items-center justify-center absolute bottom-0 left-0 rounded-bl-lg rounded-br-lg"
        >
          <a
            class="border-2 border-white p-5 text-xl text-white hover:text-[#226428] hover:bg-white font-bold uppercase"
            href="/reserva/">Reserva ahora</a
          >
        </div>
      </div>
      <div
        x-show="openTab === 2"
        class="transition-all duration-300 bg-white p-4 rounded-lg shadow-md relative"
      >
        <Itinerario circuito={circuito} />
        <div
          class="bg-[#226428] h-24 w-full flex items-center justify-center absolute bottom-0 left-0 rounded-bl-lg rounded-br-lg"
        >
          <a
            class="border-2 border-white p-5 text-xl text-white hover:text-[#226428] hover:bg-white font-bold uppercase"
            href="/reserva/">Reserva ahora</a
          >
        </div>
      </div>
      <div
        x-show="openTab === 3"
        class="transition-all duration-300 bg-white p-4 rounded-lg shadow-md relative"
      >
        <Precio circuito={circuito} />
        <div
          class="bg-[#226428] h-24 w-full flex items-center justify-center absolute bottom-0 left-0 rounded-bl-lg rounded-br-lg"
        >
          <a
            class="border-2 border-white p-5 text-xl text-white hover:text-[#226428] hover:bg-white font-bold uppercase"
            href="/reserva/">Reserva ahora</a
          >
        </div>
      </div>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js"
  defer></script>
