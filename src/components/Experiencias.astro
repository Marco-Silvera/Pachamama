---
import experienciasData from "../db/experiencias.json";

const { circuito } = Astro.props;
const experienciaActual = experienciasData.find(
  (experiencia) => experiencia.nombre == circuito.path
);

const imagenes = experienciaActual ? experienciaActual.imagenes : [];
---

<section class="flex flex-col gap-10 items-center my-24">
  <h2 class="text-[60px] font-bold uppercase text-center">
    Experiencias que vivir√°s
  </h2>
  <section class="w-[1000px] grid grid-cols-4 gap-4">
    {
      experienciaActual &&
        experienciaActual.imagenes.map((imagen, index) => (
          <article>
            <img
              class="aspect-square object-cover rounded-lg"
              src={imagen}
              alt=""
            />
          </article>
        ))
    }
  </section>
</section>
