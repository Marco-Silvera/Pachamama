---
const { imagen, nombre, descripcion } = Astro.props;
---

<section
  class="relative inline-block w-full h-[300px] md:h-[600px] before:content-[''] before:absolute before:w-full before:h-full before:bg-[black] before:opacity-70 before:pointer-events-none before:left-0 before:top-0"
>
  <img
    src={imagen}
    alt={`Imagen de ${nombre}`}
    class="w-full h-full bg-cover object-center object-cover"
  />
  <div
    class="absolute w-full h-full flex flex-col gap-5 md:gap-10 justify-center items-center text-[white] p-5 left-0 top-0"
  >
    <h1 class="text-3xl md:text-6xl font-semibold">{nombre}</h1>
    <p class="text-lg md:text-xl w-full max-w-[1000px] text-pretty">{descripcion}</p>
  </div>
</section>
