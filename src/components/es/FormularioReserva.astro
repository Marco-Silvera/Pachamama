<form
  method="POST"
  id="formreserva"
  class="flex flex-col gap-5 max-w-[480px] w-full"
>
  <input
    type="hidden"
    name="access_key"
    value="1028b022-e1af-4a36-85cc-f5434091106c"
  />
  <input type="hidden" name="form_name" value="Contacto Reserva" />
  <input type="hidden" name="subject" value="Reserva" />
  <input type="checkbox" name="botcheck" id="" style="display: none;" />

  <div class="flex flex-col gap-2">
    <label
      for="text-field-nombre-reserva"
      class="text-lg md:text-xl font-semibold">Nombre</label
    >
    <input
      id="text-field-nombre-reserva"
      type="text"
      name="nombre"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
      placeholder="Ingresa nombre..."
    />
    <p class="text-gray-400 font-semibold italic">
      (Mín. 3 caracteres / no símbolos ni números)
    </p>
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-correo-reserva"
      class="text-lg md:text-xl font-semibold">Correo</label
    >
    <input
      id="text-field-correo-reserva"
      type="email"
      name="correo"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
      placeholder="Ingresa correo..."
    />
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-telefono-reserva"
      class="text-lg md:text-xl font-semibold">Teléfono</label
    >
    <input
      id="text-field-telefono-reserva"
      type="tel"
      name="telefono"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
      placeholder="Ingresa telefono..."
    />
    <p class="text-gray-400 font-semibold italic">
      (Mín. 7 digitos / solo números)
    </p>
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-edad-reserva"
      class="text-lg md:text-xl font-semibold">Edad</label
    >
    <input
      id="text-field-edad-reserva"
      type="number"
      name="edad"
      min="1"
      max="100"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
      placeholder="Ingresa edad..."
    />
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-pasajeros-reserva"
      class="text-lg md:text-xl font-semibold">Número de pasajeros</label
    >
    <input
      id="text-field-pasajeros-reserva"
      type="number"
      name="pasajeros"
      min="1"
      max="100"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
      placeholder="Ingresa el número de pasajeros..."
    />
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-circuito-reserva"
      class="text-lg md:text-xl font-semibold">Circuito</label
    >
    <select
      id="text-field-circuito-reserva"
      name="circuito"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
    >
      <option value="" disabled selected hidden>Selecciona un circuito</option>
      <option value="aventura-inca">Aventura Inca</option>
      <option value="misterios-amazonicos">Corazón del Imperio Inca</option>
      <option value="ruta-del-pisco">Esencia del Perú</option>
      <option value="ruta-del-pisco">Panorama Peruano</option>
      <option value="ruta-del-pisco">Del Pacífico al Amazonas</option>
      <option value="ruta-del-pisco">Tesoros del Norte</option>
      <option value="ruta-del-pisco">A lo largo de los Andes</option>
    </select>
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-llegada-reserva"
      class="text-lg md:text-xl font-semibold">Día de llegada</label
    >
    <input
      id="text-field-llegada-reserva"
      type="date"
      name="llegada"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
      placeholder="Ingresa dia de llegada..."
    />
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-estancia-reserva"
      class="text-lg md:text-xl font-semibold">Días de estancia</label
    >
    <input
      id="text-field-estancia-reserva"
      type="number"
      name="estancia"
      min="1"
      max="100"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
      placeholder="Ingresa dias de estancia..."
    />
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-pais-reserva"
      class="text-lg md:text-xl font-semibold">País de origen</label
    >
    <input
      id="text-field-pais-reserva"
      type="text"
      name="pais"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
      placeholder="Ingresa pais de origen..."
    />
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-idioma-guia-reserva"
      class="text-lg md:text-xl font-semibold">Idioma del Guía</label
    >
    <select
      id="text-field-idioma-guia-reserva"
      name="idiomaguia"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
    >
      <option value="" disabled selected hidden>Selecciona idioma</option>
      <option value="espanol">Español</option>
      <option value="ingles">Inglés</option>
      <option value="frances">Francés</option>
    </select>
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-hotel-reserva"
      class="text-lg md:text-xl font-semibold">Categoría del Hotel</label
    >
    <select
      id="text-field-hotel-reserva"
      name="hotel"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428]"
    >
      <option value="" disabled selected hidden>Selecciona categoría</option>
      <option value="dos-estrellas">2 Estrellas</option>
      <option value="tres-estrellas">3 Estrellas</option>
      <option value="cuatro-estrellas">4 Estrellas</option>
      <option value="cinco-estrellas">5 Estrellas</option>
    </select>
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="text-field-mensaje-reserva"
      class="text-lg md:text-xl font-semibold">Mensaje</label
    >
    <textarea
      id="text-field-mensaje-reserva"
      name="mensaje"
      required
      class="border outline-none p-3 rounded-lg border-gray-300 focus:border-[#226428] h-24 resize-none"
      placeholder="Ingresa mensaje..."></textarea>
    <p class="text-gray-400 font-semibold italic">(Mín. 4 caracteres)</p>
  </div>

  <button
    type="submit"
    class="border-2 border-[#226428] bg-[#226428] p-2 w-40 text-white font-semibold text-xl hover:bg-white hover:text-[#226428] transition-colors"
    >Enviar</button
  >

  <div id="resultreserva"></div>
</form>

<style>
  select option {
    font-weight: 600; /* Texto más grueso */
  }

  option:hover {
    background-color: #226428; /* Cambia el color del fondo al hacer hover */
    color: white; /* Cambia el color del texto al hacer hover */
  }
</style>

<script>
  const form = document.getElementById("formreserva");
  const result = document.getElementById("resultreserva");

  form.addEventListener("submit", function (e) {
    e.preventDefault();

    // Obtener valores de los campos
    const nombre = form.nombre.value.trim();
    const telefono = form.telefono.value.trim();
    const mensaje = form.mensaje.value.trim();

    // Validaciones
    const nombreRegex = /^[A-Za-z\s]{3,}$/;
    const telefonoRegex = /^[0-9]{7,}$/;

    if (!nombreRegex.test(nombre)) {
      result.innerHTML = `
        <p class="font-semibold italic text-red-500">
          El nombre debe tener al menos 3 caracteres y no contener números o símbolos.
        </p>`;
      return;
    }

    if (!telefonoRegex.test(telefono)) {
      result.innerHTML = `
        <p class="font-semibold italic text-red-500">
          El teléfono debe tener al menos 7 dígitos y solo puede contener números.
        </p>`;
      return;
    }

    if (mensaje.length < 4) {
      result.innerHTML = `
        <p class="font-semibold italic text-red-500">
          El mensaje debe tener al menos 4 caracteres.
        </p>`;
      return;
    }

    //

    const formDataReserva = new FormData(form);
    const object = Object.fromEntries(formDataReserva);
    const json = JSON.stringify(object);
    result.innerHTML = `
        <p class="font-semibold italic">
          Espere por favor...
        </p>`;

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.innerHTML = `
        <p class="font-semibold italic text-green-500">
          Enviado correctamente!
        </p>`;
        } else {
          console.log(response);
          result.innerHTML = json.message;
        }
      })
      .catch((error) => {
        console.log(error);
        result.innerHTML = "¡Algo salió mal!";
      })
      .then(function () {
        form.reset();
        setTimeout(() => {
          result.style.display = "none";
        }, 3000);
      });
  });
</script>
