<script>
  const form = document.getElementById("formviajeamedidafr");
  const result = document.getElementById("resultviajeamedidafr");

  form.addEventListener("submit", function (e) {
    e.preventDefault();

    //

    // Obtener valores de los campos
    const nombre = form.nombre.value.trim();
    const telefono = form.telefono.value.trim();
    const apellido = form.apellido.value.trim();
    // Validaciones
    const nombreRegex = /^[A-Za-z\s]{3,}$/;
    const apellidoRegex = /^[A-Za-z\s]{3,}$/;
    const telefonoRegex = /^[0-9]{7,}$/;

    if (!nombreRegex.test(nombre)) {
      result.innerHTML = `
        <p class="font-semibold italic text-red-500">
          Le nom doit comporter au moins 3 caractères et ne contenir aucun chiffre ni symbole.
        </p>`;
      return;
    }

    if (!apellidoRegex.test(apellido)) {
      result.innerHTML = `
        <p class="font-semibold italic text-red-500">
          Le nom de famille doit comporter au moins 3 caractères et ne contenir aucun chiffre ni symbole.
        </p>`;
      return;
    }

    if (!telefonoRegex.test(telefono)) {
      result.innerHTML = `
        <p class="font-semibold italic text-red-500">
          Le téléphone doit comporter au moins 7 chiffres et ne peut contenir que des chiffres.
        </p>`;
      return;
    }

    //

    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);
    result.innerHTML = `
        <p class="font-semibold italic">
          S'il vous plaît, attendez...
        </p>`;

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.innerHTML = `
        <p class="font-semibold italic text-green-500">
          Envoyé correctement!
        </p>`;
        } else {
          console.log(response);
          result.innerHTML = json.message;
        }
      })
      .catch((error) => {
        console.log(error);
        result.innerHTML = "Quelque chose s'est mal passé!";
      })
      .then(function () {
        form.reset();
        setTimeout(() => {
          result.style.display = "none";
        }, 3000);
      });
  });
</script>
