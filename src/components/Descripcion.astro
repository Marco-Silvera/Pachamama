---
const { titulo, descripcion } = Astro.props;
---

<section
  class="flex flex-col gap-5 self-center w-full mt-6 mb-20 md:mt-20 md:mb-40"
>
  <h2 class="text-xl md:text-3xl font-bold text-[#226428]">
    {titulo}
  </h2>
  <p class="text-sm md:text-base font-normal w-fit">
    {descripcion}
  </p>
</section>
