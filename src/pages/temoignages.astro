---
import LayoutFr from "../layouts/LayoutFr.astro";
import testimonioData from "../db/fr/testimonios.json";
---

<LayoutFr title="Testimonios" rutaEsp="/testimonios" rutaFr="/temoignages">
  <section
    class="flex flex-col gap-10 md:gap-20 self-center max-w-[1200px] py-20 p-5"
  >
    <h2 class="text-3xl lg:text-6xl font-bold uppercase text-center">
      TÃ©moignages
    </h2>
    <section class="flex flex-wrap justify-center gap-10">
      {
        testimonioData.map((testimonio) => (
          <article class="max-w-[300px] w-full flex flex-col gap-5 items-center">
            <img
              class="aspect-[2/3] object-cover rounded-lg shadow-xl"
              src={testimonio.imagen}
              alt={`Guide ${testimonio.nombre}`}
            />
            <div class="flex flex-col gap-5">
              <h3 class="text-xl lg:text-2xl font-bold uppercase">
                {testimonio.nombre}
              </h3>
              <span class="text-base font-bold text-[#226428]">
                {testimonio.pais}
              </span>
              <p class="text-sm lg:text-base font-medium text-[#7A7A7A] text-pretty">
                {testimonio.testimonio}
              </p>
            </div>
          </article>
        ))
      }
    </section>
  </section>
</LayoutFr>
