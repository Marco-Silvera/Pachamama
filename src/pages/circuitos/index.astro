---
import circuitosData from "../../db/es/circuitos.json";
import Layout from "../../layouts/Layout.astro";

const title = "Circuitos - Pachamama Turismo Alternativo";
const metaDescription =
  "Descubre los mejores circuitos de ecoturismo en Perú con Pachamama Turismo Alternativo. Vive experiencias únicas de aventura, naturaleza y cultura en destinos sostenibles como Machu Picchu, la";
const ogImage = "/circuitos/Portada - Aventura Inca.webp";
---

<Layout
  title={title}
  description={metaDescription}
  ogImage={ogImage}
  rutaEsp="/circuitos"
  rutaFr="/circuits"
>
  <div class="flex justify-center py-20 px-5">
    <section
      class="flex flex-col gap-10 lg:gap-20 max-w-[1200px] w-full self-center"
    >
      <h2 class="uppercase text-3xl lg:text-6xl font-bold text-center">
        Circuitos Destacados
      </h2>
      <div class="flex flex-wrap justify-center gap-5">
        {
          circuitosData.map((circuito) => (
            <article class="relative w-full max-w-80 md:max-w-[380px] h-96 md:h-[600px] overflow-hidden group transition-all ease-in-out duration-500 rounded-lg shadow-xl">
              <a
                href={`/circuitos/${circuito.path}`}
                class="group block h-full"
              >
                <img
                  class="w-full h-full bg-cover object-center object-cover group-hover:scale-110 transition-all ease-in-out duration-500"
                  src={circuito.imagenes[0]}
                  alt={`Caratula de ${circuito.nombre}`}
                />

                <div class=" absolute bg-[#226428] text-[#C9CE92] text-[28px] w-full text-center p-2.5 bottom-0 group-hover:bg-[#C9CE92] group-hover:text-[#226428] transition-all duration-500 ease-in-out">
                  <h3 class="Circuits-overlay-title font-bold text-xl md:text-[28px]">
                    {circuito.nombre}
                  </h3>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </section>
  </div>
</Layout>
