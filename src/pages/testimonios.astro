---
import ScrollingLogo from "../components/ScrollingLogo.astro";
import testimonioData from "../db/testimonios.json";
import ViajeAMedida from "../components/ViajeAMedida.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Testimonios">
  <section class="flex flex-col gap-16 self-center w-[1000px] my-24">
    <h2 class="text-[60px] font-bold uppercase text-center">Testimonios</h2>
    <section class="flex flex-wrap justify-center gap-10">
      {
        testimonioData.map((testimonio) => (
          <article class="w-[450px] flex flex-col gap-5 items-center mb-10">
            <img
              class="aspect-[2/3] object-cover"
              src={testimonio.imagen}
              alt={`Guia ${testimonio.nombre}`}
            />
            <div class="flex flex-col gap-5">
              <h3 class="text-2xl font-bold uppercase">{testimonio.nombre}</h3>
              <span class="text-base">{testimonio.pais}</span>
              <p class="text-base font-medium text-[#7A7A7A] text-pretty">
                {testimonio.testimonio}
              </p>
            </div>
          </article>
        ))
      }
    </section>
  </section>
  <ScrollingLogo />
  <ViajeAMedida />
</Layout>
