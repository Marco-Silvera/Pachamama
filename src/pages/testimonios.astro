---
import testimonioData from "../db/es/testimonios.json";
import Layout from "../layouts/Layout.astro";

const title = "Testimonios - Pachamama Turismo Alternativo";
const metaDescription =
  "Descubre los testimonios de nuestros viajeros y conoce sus experiencias con Pachamama Turismo Alternativo.";
---

<Layout
  title={title}
  description={metaDescription}
  rutaEsp="/testimonios"
  rutaFr="/temoignages"
>
  <section
    class="flex flex-col gap-10 md:gap-20 self-center max-w-[1200px] py-20 p-5"
  >
    <h2 class="text-3xl md:text-6xl font-bold uppercase text-center">
      Testimonios
    </h2>
    <section class="flex flex-wrap justify-center gap-10">
      {
        testimonioData.map((testimonio) => (
          <article class="max-w-[300px] w-full flex flex-col gap-5 items-center">
            <img
              class="aspect-[2/3] object-cover rounded-lg shadow-xl"
              src={testimonio.imagen}
              alt={`Guia ${testimonio.nombre}`}
            />
            <div class="flex flex-col gap-5">
              <h3 class="text-xl lg:text-2xl font-bold uppercase">
                {testimonio.nombre}
              </h3>
              <span class="text-base font-bold text-[#226428]">
                {testimonio.pais}
              </span>
              <p class="text-sm lg:text-base font-medium text-[#7A7A7A] text-pretty">
                {testimonio.testimonio}
              </p>
            </div>
          </article>
        ))
      }
    </section>
  </section>
</Layout>
